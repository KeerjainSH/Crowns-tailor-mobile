<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/placeholder_cardView7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/placeholder_img_offer_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/product_photo_content_desc"
                android:src="#FFAAAAAA" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/placeholder_tv_offer_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/lato"
            android:background="#FFAAAAAA"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/placeholder_cardView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/placeholder_cardView7"
            app:layout_constraintTop_toTopOf="@+id/placeholder_cardView7"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/placeholder_textView28"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato"
            android:background="#FFAAAAAA"
            app:layout_constraintEnd_toEndOf="@+id/placeholder_tv_offer_product_name"
            app:layout_constraintStart_toStartOf="@+id/placeholder_tv_offer_product_name"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_tv_offer_product_name" />

        <TextView
            android:id="@+id/placeholder_tv_offer_instruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/lato"
            android:background="#FFAAAAAA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/placeholder_textView28"
            app:layout_constraintStart_toStartOf="@+id/placeholder_textView28"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_textView28"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:background="#FFAAAAAA"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:background="#FFAAAAAA"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/placeholder_tv_fabric_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textSize="12sp"
        android:background="#FFAAAAAA"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:background="#FFAAAAAA"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black" />
</androidx.appcompat.widget.LinearLayoutCompat>